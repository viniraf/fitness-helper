@page "/my-informations"

@inject NavigationManager NavigationManager

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="row w-100">
        <div class="col-12 col-md-8 col-lg-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center">My Informations</h3>
                    <div class="form-group mb-3">
                        <label for="name">Nome</label>
                        <input type="text" class="form-control" id="name" @bind="name" disabled />
                    </div>
                    <div class="form-group mb-4">
                        <label for="sex">Sex</label>
                        <input type="text" class="form-control" id="sex" @bind="sex" disabled />
                    </div>
                    <div class="form-group mb-4">
                        <label for="weight">Weight</label>
                        <input type="text" class="form-control" id="weight" @bind="weight" disabled />
                    </div>
                    <div class="form-group mb-4">
                        <label for="height">Height</label>
                        <input type="text" class="form-control" id="height" @bind="height" disabled />
                    </div>
                    <div class="form-group mb-4">
                        <label for="age">Age</label>
                        <input type="text" class="form-control" id="age" @bind="age" disabled />
                    </div>
                    <div class="form-group mb-4">
                        <label for="exerciseWeeklyFrequency">Exercise Weekly Frequency</label>
                        <input type="text" class="form-control" id="exerciseWeeklyFrequency" @bind="exerciseWeeklyFrequency" disabled />
                    </div>
                    <div class="form-group mb-4">
                        <label for="goal">Goal</label>
                        <input type="text" class="form-control" id="goal" @bind="goal" disabled />
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary" @onclick="IrParaEdicao">Edit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string name = "Pedro";
    private string sex = "Male";
    private double weight = 70.0;
    private double height = 1.70;
    private int age = 25;
    private string goal = "Lose weight";
    private int exerciseWeeklyFrequency = 3;

    private void IrParaEdicao()
    {
        NavigationManager.NavigateTo("/editar-informacoes");
    }
}
